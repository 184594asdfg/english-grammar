/* 混淆词列表页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 0 32rpx 0;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.05);
}

.back-icon {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
  margin-right: 8rpx;
}

.back-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

/* 学习进度 */
.progress-section {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.progress-value {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.6s ease;
}

/* 混淆词列表 */
.confusion-list {
  margin-bottom: 40rpx;
}

.list-title {
  margin-bottom: 24rpx;
}

.title-text {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.title-desc {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.6);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.confusion-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.confusion-item {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s ease;
}

.confusion-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.05);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.item-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.item-title {
  flex: 1;
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.item-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.status-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  color: white;
  font-weight: bold;
}

.status-icon {
  background: #28a745;
}

.confusion-item:nth-child(3) .status-icon {
  background: #ffc107;
}

.confusion-item:nth-child(n+4) .status-icon {
  background: #6c757d;
}

.item-desc {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.6);
  line-height: 1.4;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}