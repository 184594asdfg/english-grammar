/** 英语语法速通pro - 首页样式 **/

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 顶部横幅区域 */
.header-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 30rpx;
  text-align: left;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 10;
  border-radius: 0 0 30rpx 30rpx;
}

.header-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 2rpx, transparent 2rpx);
  background-size: 60rpx 60rpx;
  animation: float 25s linear infinite;
}

.header-banner::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
}

@keyframes float {
  0% { transform: translate(0, 0); }
  100% { transform: translate(60rpx, 60rpx); }
}

.header-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.banner-content {
  position: relative;
  z-index: 1;
}

.app-title {
  text-align: center;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: flex-start;
  align-items: baseline;
  flex-wrap: wrap;
}

.title-main {
  font-size: 56rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
  letter-spacing: 1rpx;
}

.title-sub {
  font-size: 56rpx;
  color: rgba(255, 255, 255, 0.95);
  position: relative;
  margin-left: 8rpx;
  letter-spacing: 1rpx;
}

.title-pro {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
  position: relative;
  top: -8rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.title-decoration {
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, rgba(255,255,255,0.9), rgba(255,255,255,0.3));
  border-radius: 3rpx;
  margin-top: 20rpx;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.3);
  position: relative;
}

.title-decoration::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);
  animation: shine 3s ease-in-out infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

/* 简洁进度条 */
.simple-progress {
  margin-top: 30rpx;
  padding: 24rpx 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.study-days {
