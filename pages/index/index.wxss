/* 英语语法速通 - 现代化设计样式 */

/* 容器样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 顶部英雄区域 */
.hero-section {
  position: relative;
  padding: 80rpx 40rpx 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 70%, #f093fb 100%);
  border-radius: 0 0 40rpx 40rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: left;
}

.hero-title-wrapper {
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  margin-bottom: 12rpx;
  position: relative;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4),
               0 4rpx 16rpx rgba(102, 126, 234, 0.6);
  letter-spacing: -1rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  line-height: 1.1;
  position: relative;
}

.hero-badge {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 165, 0, 0.2) 100%);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
  align-self: flex-end;
  margin-bottom: 2rpx;
  position: relative;
  top: 4rpx;
}

.badge-text {
  font-size: 20rpx;
  color: #ffd700;
  font-weight: 700;
  text-shadow: 0 1rpx 4rpx rgba(255, 215, 0, 0.6),
               0 2rpx 8rpx rgba(255, 165, 0, 0.4);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  letter-spacing: 1rpx;
}

.hero-subtitle {
  font-size: 34rpx;
  font-weight: 800;
  color: #ffd700;
  text-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.6),
               0 4rpx 16rpx rgba(255, 165, 0, 0.4),
               0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 8rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  letter-spacing: 0.8rpx;
}

.hero-tags {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
  margin-top: 16rpx;
  max-width: 100%;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.hero-tag {
  background: rgba(255, 255, 255, 0.15);
  color: rgba(255, 255, 255, 0.95);
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8rpx);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  white-space: nowrap;
  flex-shrink: 0;
}

.hero-tag:active {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1),
              0 1rpx 2rpx rgba(255, 255, 255, 0.3) inset;
}

/* 英雄区域背景元素 */
.hero-bg-element {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.12);
  filter: blur(25rpx);
  animation: float 10s ease-in-out infinite;
}

.hero-bg-element.element-1 {
  width: 240rpx;
  height: 240rpx;
  top: -120rpx;
  right: -60rpx;
  animation-delay: 0s;
}

.hero-bg-element.element-2 {
  width: 180rpx;
  height: 180rpx;
  bottom: -90rpx;
  left: -45rpx;
  animation-delay: 3s;
}

.hero-bg-element.element-3 {
  width: 140rpx;
  height: 140rpx;
  top: 40%;
  right: 25%;
  animation-delay: 6s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) scale(1); }
  50% { transform: translateY(-40rpx) scale(1.15); }
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 32rpx 80rpx;
}

/* 快速操作卡片 */
.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.action-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.action-card.secondary {
  background: rgba(255, 255, 255, 0.98);
  color: #333333;
}

.action-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.action-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.action-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.action-card.secondary .action-desc {
  color: rgba(51, 51, 51, 0.7);
}

/* 专项学习模块 */
.special-section {
  margin-bottom: 48rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.special-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

.section-header {
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
}

.section-title-wrapper {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(102, 126, 234, 0.6));
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.5);
  line-height: 1;
  transform: translateY(2rpx);
}

.section-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 2rpx 16rpx rgba(102, 126, 234, 0.8),
               0 4rpx 24rpx rgba(0, 0, 0, 0.3);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  letter-spacing: 0.5rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

.special-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  position: relative;
  z-index: 2;
}

.special-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.92) 100%);
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15),
              0 2rpx 8rpx rgba(255, 255, 255, 0.3) inset,
              0 -2rpx 8rpx rgba(0, 0, 0, 0.05) inset;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  min-height: 200rpx;
  position: relative;
  overflow: hidden;
  min-width: 0;
}

.special-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
}

.special-card:active {
  transform: translateY(6rpx) scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12),
              0 1rpx 4rpx rgba(255, 255, 255, 0.4) inset;
}

.special-card.junior {
  border-left: 6rpx solid #4CAF50;
}

.special-card.senior {
  border-left: 6rpx solid #2196F3;
}

.special-card.college {
  border-left: 6rpx solid #9C27B0;
}

.card-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 16rpx;
  position: relative;
}

.card-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.3));
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 2;
}

.card-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #2c3e50;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
  letter-spacing: 0.2rpx;
  position: relative;
  z-index: 2;
}

.card-desc {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.75);
  margin-bottom: 16rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.progress-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1) inset;
  position: relative;
}

.progress-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.3) 0%, transparent 50%);
  border-radius: 4rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4),
              0 1rpx 4rpx rgba(255, 255, 255, 0.3) inset;
  position: relative;
  z-index: 2;
}

.progress-text {
  font-size: 20rpx;
  color: rgba(51, 51, 51, 0.8);
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 2;
}

/* 功能导航 */
.navigation-section {
  margin-bottom: 48rpx;
}

.nav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.nav-item {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}

.nav-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.nav-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

/* 今日推荐 */
.recommend-section {
  margin-bottom: 48rpx;
}

.recommend-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommend-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.recommend-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}

.rec-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.2));
}

.rec-content {
  flex: 1;
}

.rec-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.rec-desc {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.6);
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

/* 学习统计 */
.stats-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
  backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

/* 通用样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.5);
  margin-bottom: 24rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.section-more {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}