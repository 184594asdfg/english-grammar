  background: rgba(255, 255, 255, 0.15);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-text {
