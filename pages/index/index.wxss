  color: rgba(255, 255, 255, 0.7);
  margin-right: 8rpx;
}

.next-content-simple {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
