.catalog-item:nth-child(11) { animation-delay: 1.0s; }
.catalog-item:nth-child(12) { animation-delay: 1.1s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 学习按钮悬停动画 */
.study-btn {
  animation: btnPulse 2s infinite;
}

@keyframes btnPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

