/* 初中语法页面样式 */
.junior-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}





/* 专业网课目录 */
.professional-catalog {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 课程头部信息 */
.course-header {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.header-content {
  flex: 1;
  position: relative;
  z-index: 2;
}

.course-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.course-subtitle {
  font-size: 28rpx;
  color: #64748b;
  display: block;
  margin-bottom: 20rpx;
}

.course-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #64748b;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.achievement-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  animation: badgeGlow 2s ease-in-out infinite;
}

.badge-icon {
  font-size: 24rpx;
}

.badge-text {
  font-size: 22rpx;
  color: white;
  font-weight: 600;
}

@keyframes badgeGlow {
  0%, 100% { box-shadow: 0 0 10rpx rgba(251, 191, 36, 0.3); }
  50% { box-shadow: 0 0 20rpx rgba(251, 191, 36, 0.6); }
}

.course-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.course-info {
  position: relative;
  z-index: 2;
}

.course-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.course-subtitle {
  font-size: 32rpx;
  color: rgba(255,255,255,0.9);
  display: block;
}

.course-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  position: relative;
  z-index: 2;
}

.stat-item {
  text-align: center;
  background: rgba(255,255,255,0.15);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.stat-progress {
  font-size: 36rpx;
  font-weight: bold;
  color: #4ade80;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

/* 进度环 */
.progress-ring {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  z-index: 2;
}

.progress-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}


.progress-inner {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: none;
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  line-height: 1;
}

.progress-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 目录列表 - 嵌套式结构 */
.catalog-list {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin: 0 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 章节容器 - 展开收缩样式 */
.chapter-container {
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.chapter-container:hover {
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
  transform: translateY(-1rpx);
}

.chapter-container.collapsed {
  margin-bottom: 20rpx;
}

.chapter-container.expanded {
  margin-bottom: 40rpx;
}

/* 章节头部 - 可点击 */
.chapter-header {
  padding: 30rpx 35rpx;
  background: linear-gradient(135deg, #f8fafc, #f1f5f9);
  border-bottom: 1rpx solid #e2e8f0;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
}

.chapter-header:hover {
  background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
}

.chapter-header:active {
  transform: scale(0.98);
}

.chapter-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea, #764ba2);
}

.chapter-info {
  flex: 1;
}

.chapter-number-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.chapter-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.chapter-badge {
  font-size: 24rpx;
  color: #64748b;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.chapter-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.4;
}

.chapter-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 15rpx;
}

.chapter-progress {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.chapter-progress-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  min-width: 80rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
  max-width: 200rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 展开图标 */
.expand-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.expand-icon:hover {
  background: rgba(102, 126, 234, 0.2);
}

.expand-arrow {
  font-size: 24rpx;
  color: #667eea;
  transition: transform 0.3s ease;
  display: inline-block;
}

.expand-arrow.expanded {
  transform: rotate(180deg);
}

.expand-arrow:not(.expanded) {
  transform: rotate(0deg);
}

/* 章节内的课时列表 - 微信小程序条件渲染样式 */
.chapter-lessons-expanded {
  padding: 0 30rpx 25rpx;
  background: #fafbfc;
  animation: slideDown 0.3s ease-out;
}

.chapter-lessons-collapsed {
  display: none;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chapter-lessons::before {
  content: '';
  display: block;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
  margin: 0 -30rpx 20rpx;
}

/* 课时项 - 优化高度和间距 */
.lesson-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 25rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 1rpx 6rpx rgba(0,0,0,0.02);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border: 1rpx solid transparent;
  animation: slideInUp 0.4s ease-out both;
  min-height: 100rpx; /* 设置最小高度 */
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.lesson-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.lesson-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.6s;
}

.lesson-item:hover::before {
  left: 100%;
}

.lesson-item:active {
  transform: scale(0.98);
}

.lesson-item.current {
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border: 1rpx solid #0ea5e9;
  box-shadow: 0 2rpx 12rpx rgba(14, 165, 233, 0.15);
}

.lesson-item.completed {
  background: linear-gradient(135deg, #f0fdf4, #dcfce7);
  border: 1rpx solid #22c55e;
  box-shadow: 0 2rpx 12rpx rgba(34, 197, 94, 0.15);
}

.lesson-item.locked {
  opacity: 0.7;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
}

/* 左侧状态指示器 - 优化尺寸 */
.lesson-status {
  display: flex;
  align-items: center;
  margin-right: 25rpx;
  position: relative;
}

.status-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  z-index: 2;
  position: relative;
}

.lock-icon {
  color: #94a3b8;
  font-size: 32rpx;
}

.check-icon {
  color: #22c55e;
  font-size: 36rpx;
}

.play-icon {
  color: #0ea5e9;
  font-size: 24rpx;
}

.number-icon {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 24rpx;
}

.lesson-item.locked .status-icon {
  background: #f1f5f9;
  color: #94a3b8;
}

.lesson-item.current .status-icon {
  background: linear-gradient(135deg, #0ea5e9, #0284c7);
  color: white;
  animation: pulse 2s infinite;
}

.lesson-item.completed .status-icon {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
}

.status-indicator {
  width: 3rpx;
  height: 100rpx;
  background: #e2e8f0;
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  z-index: 1;
}

.lesson-item.current .status-indicator {
  background: linear-gradient(to bottom, #0ea5e9, #0284c7);
}

.lesson-item.completed .status-indicator {
  background: linear-gradient(to bottom, #22c55e, #16a34a);
}

/* 中间内容 */
.lesson-content {
  flex: 1;
  margin-right: 30rpx;
}

.lesson-title-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.lesson-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-right: 16rpx;
}

.lesson-item.locked .lesson-title {
  color: #64748b;
}

.learning-badge {
  background: linear-gradient(135deg, #0ea5e9, #0284c7);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.lesson-desc {
  font-size: 24rpx;
  color: #64748b;
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.lesson-meta {
  display: flex;
  gap: 15rpx;
}

.lesson-duration, .lesson-difficulty {
  font-size: 22rpx;
  color: #94a3b8;
}

/* 右侧操作 - 优化尺寸 */
.lesson-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  min-width: 100rpx;
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 2rpx;
}

.action-text {
  font-size: 22rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.1;
}

.action-subtext {
  font-size: 18rpx;
  text-align: center;
  opacity: 0.8;
}

/* 锁定状态 */
.action-locked .action-icon {
  color: #94a3b8;
}

.action-locked .action-text {
  color: #64748b;
}

/* 完成状态 */
.action-completed .action-icon {
  color: #22c55e;
}

.action-completed .action-text {
  color: #16a34a;
}

.action-completed .action-subtext {
  color: #15803d;
}

/* 当前学习状态 */
.action-current .action-icon {
  color: #0ea5e9;
  animation: pulse 2s infinite;
}

.action-current .action-text {
  color: #0284c7;
}

.action-current .action-subtext {
  color: #0369a1;
}

/* 开始状态 */
.action-start .action-icon {
  color: #667eea;
  font-size: 28rpx;
}

.action-start .action-text {
  color: #5b21b6;
}

.start-arrow {
  font-size: 24rpx;
  color: #667eea;
  margin-top: 4rpx;
  animation: arrowMove 1.5s ease-in-out infinite;
}

@keyframes arrowMove {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(4rpx); }
}

/* 动画效果 */
.lesson-item {
  animation: fadeInUp 0.6s ease-out;
}

.lesson-item:nth-child(2) { animation-delay: 0.1s; }
.lesson-item:nth-child(3) { animation-delay: 0.2s; }
.lesson-item:nth-child(4) { animation-delay: 0.3s; }
.lesson-item:nth-child(5) { animation-delay: 0.4s; }
.lesson-item:nth-child(6) { animation-delay: 0.5s; }
.lesson-item:nth-child(7) { animation-delay: 0.6s; }
.lesson-item:nth-child(8) { animation-delay: 0.7s; }
.lesson-item:nth-child(9) { animation-delay: 0.8s; }
.lesson-item:nth-child(10) { animation-delay: 0.9s; }
.lesson-item:nth-child(11) { animation-delay: 1.0s; }
.lesson-item:nth-child(12) { animation-delay: 1.1s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 课程头部动画 */
.course-header {
  animation: slideInLeft 0.8s ease-out;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 章节标题动画 */
.chapter-group {
  animation: slideInLeft 0.6s ease-out;
}

.chapter-group:nth-child(2) { animation-delay: 0.2s; }
.chapter-group:nth-child(3) { animation-delay: 0.4s; }

/* 当前学习项特殊动画 */
.lesson-item.current {
  animation: currentItemGlow 3s ease-in-out infinite;
}

@keyframes currentItemGlow {
  0%, 100% { 
    box-shadow: 0 4rpx 20rpx rgba(14, 165, 233, 0.15);
  }
  50% { 
    box-shadow: 0 8rpx 30rpx rgba(14, 165, 233, 0.3);
  }
}

/* 学习按钮脉冲动画 */
.lesson-item.current .action-current {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}







@keyframes pulse {
  0% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.05); }
  100% { opacity: 1; transform: scale(1); }
}

/* 网课目录动画 */
.catalog-item {
  animation: fadeInUp 0.6s ease-out;
}

.catalog-item:nth-child(2) { animation-delay: 0.1s; }
.catalog-item:nth-child(3) { animation-delay: 0.2s; }
.catalog-item:nth-child(4) { animation-delay: 0.3s; }
.catalog-item:nth-child(5) { animation-delay: 0.4s; }
.catalog-item:nth-child(6) { animation-delay: 0.5s; }
.catalog-item:nth-child(7) { animation-delay: 0.6s; }
.catalog-item:nth-child(8) { animation-delay: 0.7s; }
.catalog-item:nth-child(9) { animation-delay: 0.8s; }
