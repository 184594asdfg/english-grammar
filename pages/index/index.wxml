<!-- 英语语法速通 - 现代化设计首页 -->
<view class="container">
  <!-- 顶部英雄区域 -->
  <view class="hero-section">
    <view class="hero-content">
      <view class="hero-title-wrapper">
        <text class="hero-title">英语语法速通</text>
        <view class="hero-badge">
          <text class="badge-text">PRO</text>
        </view>
      </view>
      <view class="hero-tags">
        <view class="hero-tag">个性化学习</view>
        <view class="hero-tag">AI推荐</view>
        <view class="hero-tag">进度跟踪</view>
        <view class="hero-tag">专业解析</view>
      </view>
    </view>
    
    <!-- 装饰性背景元素 -->
    <view class="hero-bg-element element-1"></view>
    <view class="hero-bg-element element-2"></view>
    <view class="hero-bg-element element-3"></view>
  </view>

  <!-- 主要内容区域 -->
  <view class="main-content">

    <!-- 专项学习模块 -->
    <view class="special-section">
      <view class="section-header">
        <view class="section-title-wrapper">
          <view class="section-icon">✨</view>
          <text class="section-title">易混淆词专项学习</text>
        </view>
        <text class="section-subtitle">按学段精准学习，告别混淆困扰</text>
      </view>
      
      <view class="special-cards">
        <view class="special-card junior" bindtap="onConfusionTap" data-level="junior">
          <view class="card-header">
            <view class="card-icon">🌱</view>
            <text class="card-title">初中阶段</text>
          </view>
          <text class="card-desc">8个核心混淆点</text>
          <view class="progress-section">
            <view class="progress-bar">
              <view class="progress-fill" style="width: 60%"></view>
            </view>
            <text class="progress-text">60% 已学习</text>
          </view>
        </view>
        
        <view class="special-card senior" bindtap="onConfusionTap" data-level="senior">
          <view class="card-header">
            <view class="card-icon">🌿</view>
            <text class="card-title">高中阶段</text>
          </view>
          <text class="card-desc">12个进阶混淆点</text>
          <view class="progress-section">
            <view class="progress-bar">
              <view class="progress-fill" style="width: 40%"></view>
            </view>
            <text class="progress-text">40% 已学习</text>
          </view>
        </view>
        
        <view class="special-card college" bindtap="onConfusionTap" data-level="college">
          <view class="card-header">
            <view class="card-icon">🌳</view>
            <text class="card-title">大学阶段</text>
          </view>
          <text class="card-desc">10个专业混淆点</text>
          <view class="progress-section">
            <view class="progress-bar">
              <view class="progress-fill" style="width: 20%"></view>
            </view>
            <text class="progress-text">20% 已学习</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 功能导航 -->
    <view class="navigation-section">
      <text class="section-title">核心功能</text>
      
      <view class="nav-grid">
        <view class="nav-item" bindtap="openGrammar">
          <view class="nav-icon">📚</view>
          <text class="nav-label">语法学习</text>
        </view>
        
        <view class="nav-item" bindtap="openPractice">
          <view class="nav-icon">🧪</view>
          <text class="nav-label">练习测试</text>
        </view>
        
        <view class="nav-item" bindtap="openCollection">
          <view class="nav-icon">⭐</view>
          <text class="nav-label">收藏夹</text>
        </view>
        
        <view class="nav-item" bindtap="openSettings">
          <view class="nav-icon">⚙️</view>
          <text class="nav-label">设置</text>
        </view>
      </view>
    </view>

    <!-- 今日推荐 -->
    <view class="recommend-section">
      <view class="section-header">
        <text class="section-title">今日推荐</text>
        <text class="section-more" bindtap="viewAllRecommend">更多</text>
      </view>
      
      <view class="recommend-cards">
        <view class="recommend-card" bindtap="openTenseTopic">
          <view class="rec-icon">⏰</view>
          <view class="rec-content">
            <text class="rec-title">时态专题</text>
            <text class="rec-desc">掌握英语时态用法</text>
          </view>
        </view>
        
        <view class="recommend-card" bindtap="openWritingTips">
          <view class="rec-icon">✍️</view>
          <view class="rec-content">
            <text class="rec-title">写作技巧</text>
            <text class="rec-desc">提升英语写作能力</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 学习统计 -->
    <view class="stats-section">
      <text class="section-title">学习统计</text>
      
      <view class="stats-cards">
        <view class="stat-card">
          <text class="stat-value">{{studyDays}}</text>
          <text class="stat-label">学习天数</text>
        </view>
        
        <view class="stat-card">
          <text class="stat-value">{{completedPoints}}</text>
          <text class="stat-label">掌握知识点</text>
        </view>
        
        <view class="stat-card">
          <text class="stat-value">{{currentLevel}}</text>
          <text class="stat-label">当前等级</text>
        </view>
      </view>
    </view>
  </view>
</view>